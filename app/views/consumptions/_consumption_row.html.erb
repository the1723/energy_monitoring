<tr>
  <td>
    <span class="badge badge-secondary bg-blue-500 text-white dark:bg-blue-600">
      <%= consumption.energy_type.name %>
    </span>
  </td>
  <td>
    <%= consumption.value %>
  </td>
  <td>
    <%# friendly format for consumption.date_of_reading %>
    <%= consumption.date_of_reading.strftime("%B %d, %Y %H:%M %Z") %>
  </td>
  <td class="sticky right-0">
    <div class="flex gap-2">
      <%= button_to "Delete",
          consumption,
          method: :delete,
          class: "btn-outline",
          data: { turbo_confirm: "Are you sure you want to delete this consumption?", turbo_action: "advance" },
          form_class: "inline-block" %>
      <%= link_to "Edit", edit_consumption_path(consumption), class: "btn", data: { turbo_action: "advance" } %>
    </div>
  </td>
</tr>