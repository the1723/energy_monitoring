<%= turbo_frame_tag "main_content" do %>
  <%= render 'layouts/notice', notice: notice if notice %>
  <div class="max-w-2xl mx-auto">
    <div class="card">
      <header>
        <h2>Editing consumption</h2>
        <p>Update the form below to modify this consumption.</p>
      </header>
      <section>
        <%= render "form", consumption: @consumption %>
      </section>
    </div>

    <div class="flex flex-wrap gap-3 mt-6">
      <%= link_to "Show this consumption", @consumption, class: "btn-outline", data: { turbo_action: "advance" } %>
      <%= link_to "Back to consumptions", consumptions_path, class: "btn-outline", data: { turbo_action: "advance" } %>
    </div>
  </div>
<% end %>