<%= turbo_frame_tag "main_content" do %>
  <%= render 'layouts/notice', notice: notice if notice %>
  <div class="mb-8">
    <h1 class="text-3xl font-bold mb-2">Energy Monitoring Dashboard</h1>
    <p class="text-muted-foreground">Track and analyze your energy consumption</p>
  </div>
  <!-- Filters Section -->
  <div class="card p-6 mb-6">
    <h2 class="text-lg font-semibold mb-4">Filters</h2>
    <%= form_with url: root_path, method: :get, data: {
      turbo_frame: "main_content"
    }, class: "space-y-4" do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <!-- Energy Type Filter -->
        <div>
          <%= f.label :energy_type_id, "Energy Type", class: "text-muted-foreground block text-sm font-medium mb-2" %>
          <%= f.select :energy_type_id,
              options_for_select(@energy_types.map { |et| [et.name_with_unit, et.id] }, @selected_energy_type_id),
              {},
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        <!-- Start Date -->
        <div>
          <%= f.label :start_date, "Start Date", class: "block text-sm font-medium text-muted-foreground mb-2" %>
          <%= f.date_field :start_date,
              value: @start_date,
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        <!-- End Date -->
        <div>
          <%= f.label :end_date, "End Date", class: "block text-sm font-medium text-muted-foreground mb-2" %>
          <%= f.date_field :end_date,
              value: @end_date,
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        <!-- Period Grouping -->
        <div>
          <%= f.label :period, "Group By", class: "block text-sm font-medium text-muted-foreground mb-2" %>
          <%= f.select :period,
              options_for_select([["Daily", "day"], ["Weekly", "week"], ["Monthly", "month"], ["Yearly", "year"]], @period),
              {},
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
      </div>
      <div class="flex gap-3">
        <%= f.submit "Apply Filters", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors" %>
        <%= link_to "Reset", root_path, data: { turbo_frame: "main_content" }, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors" %>
      </div>
    <% end %>
  </div>
  <!-- Statistics Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
    <!-- Total Consumption Card -->
    <div class="bg-linear-to-br from-blue-500 to-blue-600 rounded-lg shadow-lg p-6 text-white">
      <div class="flex items-center justify-between mb-2">
        <h3 class="text-sm font-medium opacity-90">Total Consumption</h3>
        <svg class="w-8 h-8 opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
      </div>
      <p class="text-3xl font-bold"><%= number_with_delimiter(@chart_data[:statistics][:total_consumption]) %> <span class="text-lg"><%= @selected_energy_type&.unit %></span></p>
      <p class="text-sm opacity-80 mt-1">
        <%= @start_date.strftime("%b %d, %Y") %> - <%= @end_date.strftime("%b %d, %Y") %>
      </p>
    </div>
    <!-- Average Daily Card -->
    <div class="bg-linear-to-br from-green-500 to-green-600 rounded-lg shadow-lg p-6 text-white">
      <div class="flex items-center justify-between mb-2">
        <h3 class="text-sm font-medium opacity-90">Avg Daily Consumption</h3>
        <svg class="w-8 h-8 opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
      </div>
      <p class="text-3xl font-bold"><%= number_with_precision(@chart_data[:statistics][:average_daily_consumption], precision: 2) %> <span class="text-lg"><%= @selected_energy_type&.unit %>/day</span></p>
      <p class="text-sm opacity-80 mt-1">Per day average</p>
    </div>
    <!-- Monthly Peak Card -->
    <div class="bg-linear-to-br from-purple-500 to-purple-600 rounded-lg shadow-lg p-6 text-white">
      <div class="flex items-center justify-between mb-2">
        <h3 class="text-sm font-medium opacity-90">Monthly Peak</h3>
        <svg class="w-8 h-8 opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
        </svg>
      </div>
      <p class="text-3xl font-bold"><%= number_with_delimiter(@chart_data[:statistics][:monthly_peak_value]) %> <span class="text-lg"><%= @selected_energy_type&.unit %></span></p>
      <p class="text-sm opacity-80 mt-1"><%= @chart_data[:statistics][:monthly_peak_month] %></p>
    </div>
    <!-- Current Month Card -->
    <div class="bg-linear-to-br from-orange-500 to-orange-600 rounded-lg shadow-lg p-6 text-white">
      <div class="flex items-center justify-between mb-2">
        <h3 class="text-sm font-medium opacity-90">Current Month</h3>
        <svg class="w-8 h-8 opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
      </div>
      <p class="text-3xl font-bold"><%= number_with_delimiter(@chart_data[:statistics][:current_month_total]) %> <span class="text-lg"><%= @selected_energy_type&.unit %></span></p>
      <p class="text-sm opacity-80 mt-1"><%= Date.today.strftime("%B %Y") %></p>
    </div>
  </div>
  <!-- Charts Section -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
    <!-- Main Consumption Trend Chart -->
    <div class="card p-6">
      <h2 class="text-lg font-semibold mb-4">Consumption Trend</h2>
      <%= area_chart @chart_data[:chart_data],
          thousands: ",",
          suffix: " #{@selected_energy_type&.unit || 'units'}",
          colors: ["#3B82F6"],
          library: {
            plugins: {
              legend: { display: false }
            }
          } %>
    </div>
    <!-- Daily Average Comparison Chart -->
    <div class="card p-6">
      <h2 class="text-lg font-semibold mb-4">Daily Average Comparison</h2>
      <% if @chart_data[:comparison_data].any? %>
        <%= column_chart @chart_data[:comparison_data],
            thousands: ",",
            suffix: " #{@selected_energy_type&.unit || 'units'}",
            colors: ["#3B82F6", "#10B981", "#8B5CF6"],
            library: {
              plugins: {
                legend: {
                  display: true,
                  position: 'bottom',
                  labels: {
                    padding: 15,
                    usePointStyle: true,
                    font: {
                      size: 12
                    }
                  }
                }
              }
            } %>
      <% else %>
        <div class="flex items-center justify-center h-64 text-gray-400">
          <p>No data available for the selected period</p>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
