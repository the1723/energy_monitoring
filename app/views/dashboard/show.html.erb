<%= turbo_frame_tag "main_content" do %>
<%= render 'layouts/notice', notice: notice if notice %>
<div class="max-w-2xl mx-auto">
  <div class="card">
    <section>
      <div id="<%= dom_id @dashboard %>">
        <dl>
          <dt>
            Index:
          </dt>
          <dd>
            <%= @dashboard.index %>
          </dd>
        </dl>
      </div>
    </section>
  </div>

  <div class="flex flex-wrap gap-3 mt-6">
    <%= link_to "Edit this dashboard", edit_dashboard_path(@dashboard), class: "btn", data: { turbo_action: "advance" } %>
    <%= link_to "Back to dashboards", dashboards_path, class: "btn-outline", data: { turbo_action: "advance" } %>
    <%= button_to "Delete this dashboard",
          @dashboard,
          method: :delete,
          class: "btn-destructive",
          data: { turbo_confirm: "Are you sure you want to delete this dashboard?", turbo_action: "advance" },
          form_class: "inline-block" %>
  </div>
</div>
<% end %>